@model Ecommerce_App.Pages.Dashboard.PictureModel
@{
    ViewData["Title"] = "Picture";
    Layout = "_Layout";
}

<h1>Admin Dashboard</h1>

<h2>Manage Products</h2>

@*Create a New Product*@

@*Update a Product*@

@*Delete a Product</h2>*@

<form method="post" enctype="multipart/form-data">

    <label asp-for="@Model.Product.Name"></label>

    <label asp-for="@Model.Product.Id"></label>
    <input asp-for="@Model.Product.Id"></input>

    <input asp-for="@Model.Input.File" />
    <button type="submit">Submit</button>

</form>


<h2>Manage Orders</h2>

<table>
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Date</th>
            <th>Customer Name</th>
            <th>Total Cost</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
        <tr>
            <td>@order.Id</td>
            <td>@order.Date.ToString("d")</td>
            <td>@order.FirstName @order.LastName</td>
            <td>$@order.Total</td>
            <td>
                <a asp-page="/Shop/Order" asp-route-Id="@order.Id">Order Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
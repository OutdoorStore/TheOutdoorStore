@model Ecommerce_App.Pages.Dashboard.PictureModel
@{
    ViewData["Title"] = "Picture";
    Layout = "_Layout";
}

<h1>Admin Dashboard</h1>

<h2>Manage Products</h2>

@*Create a New Product*@
<div>
    <h1>Create Product</h1>
    <form asp-page-handler="Create" method="post" enctype="multipart/form-data">
        <label>SKU</label>
        <input type="text" asp-for="@Model.Product.Sku" value="" />
        <label>Name</label>
        <input type="text" asp-for="@Model.Product.Name" value="" />
        <label>Price</label>
        <input type="number" asp-for="@Model.Product.Price" value="" />
        <label>Description</label>
        <input type="text" asp-for="@Model.Product.Description" value="" />
        <label>Image</label>
        <input asp-for="@Model.Input.File" />
        <button type="submit">Create</button>
    </form>
</div>

@*Update a Product*@
<div>
    <h1>Delete Product</h1>
    <form asp-page-handler="Delete" method="post">
        <label>Product ID</label>
        <input type="number" asp-for="@Model.Product.Id" value="" />
        <button type="submit">Delete</button>
    </form>
</div>

@*Delete a Product</h2>*@
<div>
    <h1>Update Product</h1>
    <form asp-page-handler="Update" method="post" enctype="multipart/form-data">

        <label asp-for="@Model.Product.Name"></label>

        <label asp-for="@Model.Product.Id"></label>
        <input asp-for="@Model.Product.Id"/>

        <input asp-for="@Model.Input.File" />
        <button type="submit">Update</button>

    </form>
</div>


<h2>Manage Orders</h2>

<table>
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Date</th>
            <th>Customer Name</th>
            <th>Total Cost</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
        <tr>
            <td>@order.Id</td>
            <td>@order.Date.ToString("d")</td>
            <td>@order.FirstName @order.LastName</td>
            <td>$@order.Total</td>
            <td>
                <a asp-page="/Shop/Order" asp-route-Id="@order.Id">Order Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
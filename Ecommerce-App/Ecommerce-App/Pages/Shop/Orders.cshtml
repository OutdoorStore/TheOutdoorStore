@page
@model Ecommerce_App.Pages.Shop.OrdersModel
@{
    ViewData["Title"] = "Orders";
    Layout = "_Layout";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb" id="breadbrumb-nav">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Account/Details">My Account</a></li>
        <li class="breadcrumb-item active" aria-current="page">My Orders</li>
    </ol>
</nav>

<div class="container">
    <div class="row">
        <!-- BEGIN ORDER -->
        <div class="col-md-12">
            <div class="grid invoice">
                <div class="grid-body">
                    <div class="invoice-title">
                        <br>
                        <div class="row">
                            <div class="col-md-12">
                                <h2>
                                    My Orders<br>
                                </h2>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <td><strong>#</strong></td>
                                        <td class="text-center"><strong>DATE</strong></td>
                                        <td class="text-center"><strong>SUBTOTAL</strong></td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>@order.Id</td>
                                            <td class="text-center">@order.Date.ToString("f")</td>
                                            <td class="text-center">$@order.Total</td>
                                            <td class="text-right"><a asp-page="/Shop/Order" asp-route-Id="@order.Id">View Order Details</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END ORDER -->
    </div>
</div>

@page
@model Ecommerce_App.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<h2>Register</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="@Model.Input.FirstName" for="firstName" class="col-3 col-form-label">First Name</label>
        <div class="col-9">
            <input asp-for="@Model.Input.FirstName" type="text" class="form-control" id="firstName" required/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Input.LastName" for="lastName" class="col-3 col-form-label">Last Name</label>
        <div class="col-9">
            <input asp-for="@Model.Input.LastName" type="text" class="form-control" id="lastName" required/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Input.Email" for="email" class="col-3 col-form-label">Email Address</label>
        <div class="col-9">
            <input asp-for="@Model.Input.Email" type="text" class="form-control" id="email" required/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Input.Password" for="password" class="col-3 col-form-label">Password</label>
        <div class="col-9">
            <input asp-for="@Model.Input.Password" type="password" class="form-control" id="password" required/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Input.ConfirmPassword" for="confirmPassword" class="col-3 col-form-label">Confirm Password</label>
        <div class="col-9">
            <input asp-for="@Model.Input.ConfirmPassword" type="password" class="form-control" id="confirmPassword" required/>
        </div>
    </div>

    <div class="row">
        <div class="col-3 offset-3">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>


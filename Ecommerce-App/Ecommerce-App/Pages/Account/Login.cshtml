@page
@model Ecommerce_App.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<!Doctype html>
<html>
<head>
    <style>
        .login {
            margin: 0px auto;
        }
    </style>
</head>

<body>
    <main id="login-main">

        <div class="row">
            <div class="col-md-4 d-flex justify-content-center login" style="margin-top:30px;">

                <form method="post">

                    <div class="form-group">
                        <h2>Login</h2>
                    </div>

                    <div asp-validation-summary="All"></div>

                    <div class="form-group">
                        <label asp-for="@Model.Input.Email" for="email"></label>
                        <input asp-for="@Model.Input.Email" class="form-control" id="email" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Input.Password" for="password"></label>
                        <input asp-for="@Model.Input.Password" type="password" class="form-control" id="password" required />
                    </div>

                    <div class="row">
                        <div class="login">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Products";
}
@model List<Ecommerce_App.Models.Product>


@*TODO add search and filter functionality*@


<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td><form asp-controller="Products" asp-action="GetSingleProduct" method="post"><input type="hidden" name="id" value="@product.Id" /><button type="submit">@product.Name</button></form></td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td><img src="@product.Image" /></td>
            </tr>
        }
    </tbody>
</table>